{
  "name": "lulu-language-support",
  "displayName": "Lulu Language Support",
  "description": "Language support for the Lulu Lua environment",
  "version": "0.0.1",
  "publisher": "makano",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/node": "18.x",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "contributes": {
    "configurationDefaults": {
      "Lua.diagnostics.enable": false
    }
  },
  "extensionDependencies": [
    "sumneko.lua"
  ]
}