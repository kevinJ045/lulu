{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lulu Debug",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/lulu",
      "args": ["build", "./example/proj"],
      "cwd": "${workspaceFolder}",
      "env": {
        "MY_CUSTOM_ENV": "hello"
      },
      "stopOnEntry": false
    },
    {
      "name": "Run Lulu Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/vscode-extension/out/**/*.js"
      ],
      "preLaunchTask": "npm: compile -p vscode-extension"
    }
  ]
}
